<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %} <link rel="stylesheet" href="{{ asset('build/app.css') }}"> {% endblock %}

    </head>

    <body>
        <div id="wrapper">
            <nav class="navbar  navbar-light  navbar-static-top">
                <div class="container"> 
                    <a class="navbar-brand" href="{{ path('index') }}">Sludify <svg-icon><src href="sprite.svg#si-glyph-strawberry" /></svg-icon></a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li><a class="nav-link" href="{{ path('post_index') }}"> All Posts </a></li>
                            <li><a class="nav-link" href="{{ path('post_new') }}"> Create New Post </a></li>
                        </ul>

                        {% if is_granted('ROLE_USER') %}
                        <ul class="nav navbar-nav navbar-right">
                            <li><a class="nav-link" href="{{ path('fos_user_security_logout') }}"> Logout </a></li>
                        </ul>
                        {% else %}
                        <ul class="nav navbar-nav navbar-right">
                            <li><a class="nav-link" href="{{ path('fos_user_security_login') }}"> Login </a></li>
                            <li> <a class="nav-link"> or </a> </li>
                            <li><a class="nav-link" href="{{ path('fos_user_registration_register') }}"> Register </a></li>
                        </ul>
                        {% endif %}
                    </div>
                </div>
            </nav>
        <div class="container">
            {% block body %}{% endblock %} 
        </div>
        {% block javascripts %} <script src="{{ asset('build/app.js') }}"></script> {% endblock %} 
        </div>
    </body>
</html>
